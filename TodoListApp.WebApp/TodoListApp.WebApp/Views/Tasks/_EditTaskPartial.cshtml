@model TodoListApp.WebApp.DBModel.Task

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Tasks</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Tasks/Edit">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ID" />
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Name" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="Name" class="form-control" /></div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Status" class="control-label"></label></div>
                            <div class="col-md-6">
                            <select name="Status" class="form-control" asp-for="Status">
                                <option value="0">To do</option>
                                <option value="1">InProgress</option>
                                <option value="2">Pending</option>
                                <option value="3">Done</option>
                            </select>
                             </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Owner" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="Owner" class="form-control" /></div>
                            <span asp-validation-for="Owner" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="CategoryID" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="CategoryID" class="form-control" /></div>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="IsCompleted" class="control-label"></label></div>
                            <div class="col-md-6">
                                <select name="IsCompeled" class="form-control" asp-for="IsCompleted">
                                    <option value="1">NotSuccess</option>
                                    <option value="2">Success</option>
                                </select>
                            </div>
                            <span asp-validation-for="IsCompleted" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="DueDate" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="DueDate" class="form-control" /></div>
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="OverDue" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="OverDue" class="form-control" /></div>
                            <span asp-validation-for="OverDue" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="CreatedDate" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="CreatedDate" class="form-control" /></div>
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="CreatedBy" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="CreatedBy" class="form-control" /></div>
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="UpdatedDate" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="UpdatedDate" class="form-control" /></div>
                            <span asp-validation-for="UpdatedDate" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="UpdatedBy" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="UpdatedBy" class="form-control" /></div>
                            <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ bỏ</button>
            </div>
        </div>
    </div>
</div>