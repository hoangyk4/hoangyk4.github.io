@model TodoListApp.WebApp.DBModel.Category

<!-- User Modal-->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Categories/Edit">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ID" />
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Name" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="Name" class="form-control" /></div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Status" class="control-label"></label></div>
                            <div class="col-md-6">
                                <select name="Status" class="form-control" asp-for="Status">
                                    <option value="1">Active</option>
                                    <option value="2">InActive</option>
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="CreatedDate" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="CreatedDate" class="form-control" /></div>
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="CreatedBy" class="control-label"></label></div>
                            <div class="col-md-6"><input type="date" asp-for="CreatedBy" class="form-control" /></div>
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="UpdatedDate" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="UpdatedDate" class="form-control" /></div>
                            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                        </div>


                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="UpdatedBy" class="control-label"></label></div>
                            <div class="col-md-6"><input asp-for="UpdatedBy" class="form-control" /></div>
                            <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ bỏ</button>
            </div>
        </div>
    </div>
</div>
