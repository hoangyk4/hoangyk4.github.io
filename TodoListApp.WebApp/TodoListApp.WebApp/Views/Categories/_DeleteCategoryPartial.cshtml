@model TodoListApp.WebApp.DBModel.Category

<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Bạn có chắc muốn xoá?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Categories/Delete">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ID" />
                        <label asp-for="ID" cla6ss="control-label">@Model.ID</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" cla6ss="control-label">@Model.Name</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">@Model.Status</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedDate" class="control-label">@Model.CreatedDate</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedBy" class="control-label">@Model.CreatedBy</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdatedDate" class="control-label">@Model.UpdatedDate</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdatedBy" class="control-label">@Model.UpdatedBy</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Xoá</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ bỏ</button>
            </div>
        </div>
    </div>
</div>