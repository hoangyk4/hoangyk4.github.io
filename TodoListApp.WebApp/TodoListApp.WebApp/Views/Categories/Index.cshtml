@model IEnumerable<TodoListApp.WebApp.DBModel.Category>

@{
    ViewData["Title"] = "Index";
}

<!-- Page Heading -->
<div class="page">
    <h2>Categories</h2>
    &ensp;
    <div class="row">
        <div class="col-xl-1">Category</div>
        <div class="col-xl-2"><input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"></div>
    </div>
    &ensp;
    <div class="row">
        <div class="col-xl-1">Status</div>
        <div class="col-xl-2">
            <select name="Category" class="form-control" id="2">
                <option value="">Active</option>
                <option value="">InActive</option>
            </select>
        </div>
    </div>
</div>
            &ensp;
<div class="text-center">
    <button type="button" class="btn btn-primary btn-lg">Search</button>
</div>
            &ensp;
<div class="row">
    <div class="col-xl-6"></div>
    <div class="col-xl-2"></div>
    <div class="col-xl-2"><button type="button" class="btn btn-info" data-toggle="modal" data-target="#editModal">Create Category</button></div>
    <div class="col-xl-2"><button type="button" class="btn btn-secondary">Export CSV</button></div>
</div>
            &ensp;
<div class="d-flex flex-row-reverse">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Trước</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        <li class="page-item"><a class="page-link" href="#">Sau</a></li>
    </ul>
</div>

<!-- DataTales Example -->
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>No</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

