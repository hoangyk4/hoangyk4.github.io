@model TodoListApp.WebApp.DBModel.User
<!-- User Modal-->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Users/Edit">
                    <div class="form-group">
                            <input type="hidden" asp-for="@Model.ID" />
                        <div class="row">
                            <div class="col-md-4"><label asp-for="UserName" class="control-label">Tài khoản</label></div>
                            <div class="col-md-6"><input asp-for="UserName" class="form-control" /></div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Password" class="control-label">Mật khẩu</label></div>
                            <div class="col-md-6"><input type="password" asp-for="Password" class="form-control" /></div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Name" class="control-label">Họ và Tên</label></div>
                            <div class="col-md-6"><input asp-for="Name" class="form-control" /></div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Birth" class="control-label">Ngày sinh</label></div>
                            <div class="col-md-6"><input type="date" asp-for="Birth" class="form-control" /></div>
                            <span asp-validation-for="Birth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Email" class="control-label">Email</label></div>
                            <div class="col-md-6"><input asp-for="Email" class="form-control" /></div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4"><label asp-for="Phone" class="control-label">Số điện thoại</label></div>
                            <div class="col-md-6"><input asp-for="Phone" class="form-control" /></div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ bỏ</button>
            </div>
        </div>
    </div>

