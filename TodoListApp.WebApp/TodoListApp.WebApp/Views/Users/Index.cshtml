@model PagedList.IPagedList<TodoListApp.WebApp.DBModel.User>
@using PagedList.Mvc;
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tài khoản</h2>
<hr>
<div class="row">
    <div class="col-xl-2"><button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#userModal">Thêm mới</button></div>
    <!-- <div class="col-xl-2"><button type="button" class="btn btn-secondary btn-lg" data-toggle="modal" data-target="#deleteModal">Chỉnh sửa</button></div> -->
</div>
<hr>
<div class="d-flex flex-row-reverse">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Trước</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        <li class="page-item"><a class="page-link" href="#">Sau</a></li>
    </ul>
</div>
<!-- DataTales Example -->
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Tài khoản</th>
                <th>Họ Tên</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Acton</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.UserName</td>
                <td>@item.Name</td>
                <td>@item.Birth</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#userModal">Edit</button> |
                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </td>
            </tr>

            }
  
        </tbody>
    </table>
</div>



